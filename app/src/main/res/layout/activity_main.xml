<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.google.codeexamples.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnThousandNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thousandNumbers" />

        <Button
            android:id="@+id/btnConversions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conversions" />

        <Button
            android:id="@+id/btnMathFunctions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mathFunctions" />

        <Button
            android:id="@+id/btnSavingData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saving Data" />

    </LinearLayout>
</ScrollView>
